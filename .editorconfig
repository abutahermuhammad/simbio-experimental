# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{tsx}]
indent_style = space
indent_size = 4

[*.{js,ts,tsx}]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2

[*.mdx]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
